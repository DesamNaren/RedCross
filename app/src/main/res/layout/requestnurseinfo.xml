<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:windowBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_homeNurse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/redcross6_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_nurse"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="80dp"
                android:src="@drawable/nurse64"
                android:tint="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/homeNurse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_10"
                        android:elevation="@dimen/dp_2">


                        <LinearLayout
                            android:id="@+id/ll_howtobecomehomeNurseBg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/tab_background_selected"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_howtobecomedonor"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_50"
                                android:layout_margin="@dimen/dp_10"
                                android:background="#21000000"
                                android:drawableEnd="@drawable/righrarrow"
                                android:drawableRight="@drawable/righrarrow"
                                android:padding="12dp"
                                android:text="@string/how_to_become_a_donor"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_10"
                        android:elevation="@dimen/dp_2">


                        <LinearLayout
                            android:id="@+id/ll_becomeahomeNurse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/tab_background_selected"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/btn_becomedonor"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_50"
                                android:layout_margin="@dimen/dp_10"
                                android:background="#21000000"
                                android:drawableEnd="@drawable/righrarrow"
                                android:drawableRight="@drawable/righrarrow"
                                android:padding="12dp"
                                android:text="@string/become_a_blood_donor"
                                android:textAlignment="center"
                                android:textColor="@color/white" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <!--<LinearLayout
            android:id="@+id/ll_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#80000000">

            <ImageView
                android:id="@+id/img_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/colorBackground"
                android:padding="@dimen/dp_5"
                android:src="@drawable/footernew">

            </ImageView>
        </LinearLayout>-->
        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#21000000"
            android:gravity="center">

            <TextView
                android:id="@+id/btn_login_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/powered_ghmc"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_cgg"
                style="@style/Cursive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="@string/powered_cgg"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>
</layout>