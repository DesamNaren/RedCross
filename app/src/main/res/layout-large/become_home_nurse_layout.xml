<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/redcross2_bg"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:text="@string/how_to_become_a_home_nurse"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_20">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="10dp"
            android:background="@color/cardview_light_background"
            android:padding="@dimen/dp_10"
            android:text="@string/home_nursing_provide_residential_care_for_elderly_or_disabled_people_here_nurses_have_the_responsibilities_of_caring_for_the_patients_medical_needs"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="10dp"
            android:background="@color/cardview_light_background"
            android:padding="@dimen/dp_10"
            android:text="@string/below_are_the_prerequisites_to_undergo_training_as_a_home_nurse"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_15dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="10dp"
            android:background="@color/cardview_light_background"
            android:padding="@dimen/dp_10"
            android:text="@string/only_female_candidates_are_eligible_n_minimum_qualification_10th_class_pass_and_above_n_age_limit_18_to_30_years"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_15dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="10dp"
            android:background="@color/cardview_light_background"
            android:padding="@dimen/dp_10"
            android:text="@string/the_training_period_is_of_2_months_at_location_gmr_varalakshmi_foundation_rajanna_siricilla_district_telangana"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15">

        </TextView>


        <Button
            android:id="@+id/btn_homeNursingRegProceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20dp"
            android:background="#30000000"
            android:text="@string/become_a_home_nurse"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
