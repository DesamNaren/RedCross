<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui_citiguest.MembershipRegFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/HeadingOfForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/FormHeading"
            android:textColor="@color/pdlg_color_blue"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include
                android:id="@+id/memberRegistration_edit"
                layout="@layout/member_registration_edit"></include>

            <include
                android:id="@+id/memberRegistration_view"
                layout="@layout/member_registration_view"
                android:visibility="gone"></include>
        </LinearLayout>
    </ScrollView>
</LinearLayout>