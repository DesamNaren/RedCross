<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redcross_splashscreen_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5dp">

            <TextView
                android:id="@+id/tv_mainHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:text="Strategic objectives"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_5"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/dp_2"
                app:cardElevation="@dimen/dimen_4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/droid_serif"
                        android:lineHeight="20dp"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="1.Enhance the capacity of Indian Red Cross to deliver its humanitarain message both within and outside the society, and to advocate tolerance and coexistence in the communities."
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/droid_serif"
                        android:lineHeight="20dp"
                        android:text="2.Increase the capacity in disaster preparedness and disaster response in disaster prone branches and State HeadQuarters and reduce the vulnerability of communities in key disaster prone areas"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:fontFamily="@font/droid_serif"
                        android:lineHeight="20dp"
                        android:text="3.Increase the capacity in health and care in branches and State HeadQuarters and improve the health of vulnerable people and communities."
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>